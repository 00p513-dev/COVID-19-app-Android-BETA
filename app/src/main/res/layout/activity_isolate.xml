<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/banner" android:id="@+id/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="32dp"
                android:paddingEnd="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/status_red"
                    style="@style/PrimaryCard"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/amber_card_background"
                        android:orientation="vertical"
                        android:paddingTop="16dp"
                        android:paddingBottom="32dp">

                        <TextView
                            android:id="@+id/symptoms"
                            style="@style/TextViewCardSubTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="28dp"
                            android:paddingEnd="24dp" />

                        <View
                            style="@style/HorizontalDivider"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:id="@+id/status_red_title"
                            style="@style/TextViewStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="28dp"
                            android:paddingEnd="24dp"
                            android:text="@string/status_red_title" />

                        <TextView
                            android:id="@+id/latest_advice_red"
                            style="@style/TextViewSubStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:paddingStart="28dp"
                            android:paddingEnd="24dp"

                            android:text="@string/status_latest_advice" />

                        <TextView
                            android:id="@+id/follow_until"
                            style="@style/TextViewCardSubTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:paddingStart="28dp"
                            android:paddingEnd="24dp"
                            android:text="@string/follow_until" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/will_be_notified"
                    style="@style/TextViewStatusSubTittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:text="@string/isolate_will_be_notified" />

                <View
                    style="@style/HorizontalDivider"
                    android:layout_marginTop="36dp"
                    android:layout_marginBottom="24dp" />

                <include layout="@layout/status_footer_view_common" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
