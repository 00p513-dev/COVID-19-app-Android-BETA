<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_nhsuk_grey_5"
    android:orientation="vertical">

    <include layout="@layout/banner" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="32dp"
            android:paddingEnd="16dp">

            <LinearLayout
                android:id="@+id/status_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/red_card_background"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingTop="32dp"
                android:paddingEnd="24dp"
                android:paddingBottom="32dp">

                <TextView
                    android:id="@+id/status_red_title"
                    style="@style/TextViewStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/status_red_title" />

                <TextView
                    style="@style/TextViewSubStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/status_latest_advice" />
            </LinearLayout>

            <TextView
                android:id="@+id/status_red_next_steps"
                style="@style/TextViewSubHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="16dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/status_red_next_steps" />

            <LinearLayout
                android:id="@+id/status_feeling_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/need_medical_advice"
                    style="@style/TextViewActionSubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/need_medical_advice"
                    android:textSize="16sp" />

                <TextView
                    style="@style/TextViewActionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:drawablePadding="8dp"
                    android:text="@string/nhs_online_service" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
