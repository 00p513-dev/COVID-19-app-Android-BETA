<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/white_banner" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/reference_code_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_bg_gradient_top"
                android:src="@drawable/ic_reference_link" />

            <TextView
                android:id="@+id/reference_code_title"
                style="@style/TextViewStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:accessibilityHeading="true"
                android:layout_marginBottom="16dp"
                android:text="@string/reference_code_title" />

            <TextView
                style="@style/TextViewStatusSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="16dp"
                android:text="@string/reference_code_description_1"
                android:textColor="@color/text_primary_color" />

            <TextView
                style="@style/TextViewStatusSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="16dp"
                android:text="@string/reference_code_description_2"
                android:textColor="@color/text_primary_color" />

            <LinearLayout
                android:id="@+id/bluetooth_rationale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="16dp"
                android:background="@color/card_background_grey">

                <View style="@style/Divider.Vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextViewStatusSubTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:accessibilityHeading="true"
                        android:lineSpacingMultiplier="1.2"
                        android:paddingStart="12dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="12dp"
                        android:text="Your app reference code"
                        android:textColor="@color/text_primary_color" />

                    <TextView
                        android:id="@+id/reference_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:accessibilityHeading="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="20dp"
                        android:letterSpacing="0.1"
                        android:paddingHorizontal="12dp"
                        android:textColor="@color/text_primary_color"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/TextViewStatusSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="16dp"
                android:text="@string/reference_code_description_3"
                android:textColor="@color/text_primary_color" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
