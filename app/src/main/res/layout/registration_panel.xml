<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp"
    android:paddingStart="16dp"
    tools:orientation="horizontal"
    tools:parentTag="android.widget.FrameLayout">

    <ProgressBar
        android:id="@+id/registrationProgressBar"
        style="?attr/indeterminateProgressStyle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:indeterminate="true"
        android:indeterminateTint="@color/black"
        android:indeterminateTintMode="src_in" />

    <ImageView
        android:id="@+id/registrationStatusIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_warning_outline" />

    <TextView
        android:id="@+id/registrationStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="32dp"
        android:text="@string/registration_finalising_setup"
        android:textSize="14sp" />

    <Button
        android:id="@+id/registrationRetryButton"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:text="@string/retry"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="invisible" />

    <View
        android:id="@+id/registrationPanelDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/divider" />
</merge>
