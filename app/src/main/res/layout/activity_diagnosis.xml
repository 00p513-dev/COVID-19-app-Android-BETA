<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/banner" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="36dp"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/diagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.18"
            android:text="@string/diagnosed"
            android:fontFamily="@font/frutiger_bold"
            android:textSize="32sp"
             />

        <RadioGroup
            android:id="@+id/diagnosis_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_below="@id/diagnosis"
            >

            <RadioButton
                android:id="@+id/yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/frutiger"
                android:text="@string/yes"
                android:textSize="36sp"
                />

            <RadioButton
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/frutiger"
                android:text="@string/no"
                android:textSize="36sp"
                />

        </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirm_diagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:background="#007F3B"
            android:text="@string/next"
            android:fontFamily="@font/frutiger_bold"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

</RelativeLayout>