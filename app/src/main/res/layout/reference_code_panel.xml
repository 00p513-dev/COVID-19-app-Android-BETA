<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reference_code_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_background_grey"
        android:orientation="horizontal">

        <View
            android:id="@+id/divider"
            style="@style/Divider.Vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewStatusSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:paddingStart="12dp"
                android:paddingTop="16dp"
                android:paddingEnd="12dp"
                android:text="Your app reference code"
                android:textColor="@color/text_primary_color" />

            <TextView
                android:id="@+id/reference_code_connect"
                style="@style/TextViewStatusSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:accessibilityHeading="true"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/connect_to_internet"
                android:textColor="@color/text_primary_color"
                android:textSize="14sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/reference_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:letterSpacing="0.1"
                android:paddingHorizontal="12dp"
                android:textColor="@color/text_primary_color"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


    <LinearLayout
        android:id="@+id/copy_content_group"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingHorizontal="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/copy_content_label"
            style="@style/TextViewLink02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:paddingTop="16dp"
            android:layout_gravity="end"
            android:text="@string/copy"/>

        <ImageButton
            android:id="@+id/copy_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginTop="8dp"
            android:layout_gravity="end"
            android:paddingBottom="16dp"
            android:foreground="?selectableItemBackground"
            android:src="@drawable/ic_content_copy" />

    </LinearLayout>

    </LinearLayout>
</merge>
