{
  "provider": {
    "name": "Registration API"
  },
  "consumer": {
    "name": "Android App"
  },
  "interactions": [
    {
      "description": "a device confirmation request",
      "request": {
        "method": "POST",
        "path": "/api/devices",
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "body": {
          "postalCode": "EC1V",
          "deviceModel": "model12",
          "activationCode": "e2490de5-5bd3-43d5-b7c4-526e33f71304",
          "pushToken": "a-valid-token-with-min-length-15",
          "deviceOSVersion": "os/2"
        },
        "matchingRules": {
          "body": {
            "$.activationCode": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
                }
              ],
              "combine": "AND"
            },
            "$.pushToken": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": ".{15,240}"
                }
              ],
              "combine": "AND"
            },
            "$.deviceModel": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": ".{1,30}"
                }
              ],
              "combine": "AND"
            },
            "$.deviceOSVersion": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": ".{1,30}"
                }
              ],
              "combine": "AND"
            },
            "$.postalCode": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "^[A-Z]{1,2}[0-9R][0-9A-Z]?"
                }
              ],
              "combine": "AND"
            }
          }
        },
        "generators": {
          "body": {
            "$.activationCode": {
              "type": "Uuid"
            }
          }
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "body": {
          "secretKey": "arAFmpewk1nN81RNwCqdXYfyghuM3cXNqvDDNQ4mM5k=",
          "publicKey": "MDYwEAYHKoZIzj0CAQYFK4EEABwDIgAEKQdihapw6FhVAuOaJsYHRk23Aaxz8J3asrw50djzW08=",
          "id": "77559e72-274f-40cf-987c-e813bf6ea8d3"
        },
        "matchingRules": {
          "body": {
            "$.secretKey": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": ".+"
                }
              ],
              "combine": "AND"
            },
            "$.publicKey": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": ".+"
                }
              ],
              "combine": "AND"
            },
            "$.id": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
                }
              ],
              "combine": "AND"
            }
          },
          "header": {
            "Content-Type": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "application/json(;\\s?charset=[\\w\\-]+)?"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "providerStates": [
        {
          "name": "a successful registration start request"
        }
      ]
    },
    {
      "description": "a registration request",
      "request": {
        "method": "POST",
        "path": "/api/devices/registrations",
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "body": {
          "pushToken": "a-valid-token-with-min-length-15"
        }
      },
      "response": {
        "status": 204
      },
      "providerStates": [
        {
          "name": "no existing registration"
        }
      ]
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "3.0.0"
    },
    "pact-jvm": {
      "version": "4.0.10"
    }
  }
}