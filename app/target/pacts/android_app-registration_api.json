{
  "provider": {
    "name": "registration_api"
  },
  "consumer": {
    "name": "android_app"
  },
  "interactions": [
    {
      "description": "a device confirmation request",
      "request": {
        "method": "POST",
        "path": "/api/devices",
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "body": {
          "postalCode": "EC1V",
          "deviceModel": "model12",
          "activationCode": "e2490de5-5bd3-43d5-b7c4-526e33f71304",
          "pushToken": "a-valid-token-with-min-length-15",
          "deviceOSVersion": "os/2"
        },
        "matchingRules": {
          "body": {
            "$.activationCode": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
                }
              ],
              "combine": "AND"
            },
            "$.pushToken": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": ".{15,240}"
                }
              ],
              "combine": "AND"
            },
            "$.deviceModel": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": ".{1,30}"
                }
              ],
              "combine": "AND"
            },
            "$.deviceOSVersion": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": ".{1,30}"
                }
              ],
              "combine": "AND"
            },
            "$.postalCode": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "^[A-Z]{1,2}[0-9R][0-9A-Z]?"
                }
              ],
              "combine": "AND"
            }
          }
        },
        "generators": {
          "body": {
            "$.activationCode": {
              "type": "Uuid"
            }
          }
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "body": {
          "secretKey": "fhgGJFOjMT8sc44lO8/Af+E+0bcJCiMG8fachujRACE=",
          "publicKey": "MDYwEAYHKoZIzj0CAQYFK4EEABwDIgAE2DmeTr0sI3IgWrEwjj3c1zKLkKeKV0vTchdFVmaa3aA=",
          "id": "6bfc28bf-0d76-4cdb-90a4-8f57560c3196"
        },
        "matchingRules": {
          "body": {
            "$.secretKey": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": ".+"
                }
              ],
              "combine": "AND"
            },
            "$.publicKey": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": ".+"
                }
              ],
              "combine": "AND"
            },
            "$.id": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
                }
              ],
              "combine": "AND"
            }
          },
          "header": {
            "Content-Type": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "application/json(;\\s?charset=[\\w\\-]+)?"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "providerStates": [
        {
          "name": "a successful registration start request"
        }
      ]
    },
    {
      "description": "a registration request",
      "request": {
        "method": "POST",
        "path": "/api/devices/registrations",
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "body": {
          "pushToken": "a-valid-token-with-min-length-15"
        },
        "matchingRules": {
          "body": {
            "$.pushToken": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": ".*"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "response": {
        "status": 204
      },
      "providerStates": [
        {
          "name": "no existing registration"
        }
      ]
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "3.0.0"
    },
    "pact-jvm": {
      "version": "4.0.10"
    }
  }
}